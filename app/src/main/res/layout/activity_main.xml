<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp">
        <ImageView
                android:layout_width="400dp"
                android:layout_height="400dp" app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/imageView" android:layout_marginTop="15dp" android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btn.capture"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:srcCompat="@drawable/camera" />

        <ImageView
            android:id="@+id/img_pick_btn"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            app:srcCompat="@drawable/gallery" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>